<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Geegy"
            android:textStyle="bold"
            android:textColor="@color/GeegyPink"
            android:textSize="23dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Caring your teeth like never before"
            android:textColor="@color/GeegyGray"
            android:textSize="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textColor="@color/GeegyBlack"
            android:textSize="15dp"
            android:layout_marginTop="25dp"/>
        
        <EditText
            android:id="@+id/dateET"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_input"
            android:text="2024-04-10"
            android:textSize="15sp"
            android:inputType="date"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search"
            android:textColor="@color/GeegyBlack"
            android:textSize="15dp"
            android:layout_marginTop="15dp"/>

        <EditText
            android:id="@+id/searchET"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            android:letterSpacing="0.15"
            android:hint="..."
            android:padding="10dp"
            android:textColorHint="@color/GeegyLightGray"
            android:background="@drawable/bg_input"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Appointment Log:"
            android:textColor="@color/GeegyBlack"
            android:textSize="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/AppointmentRV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/successTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Success Appointment: "
            android:textColor="@color/GeegyBlack"/>

        <TextView
            android:id="@+id/cancelledTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancelled Appointment: "
            android:textColor="@color/GeegyBlack"/>

    </LinearLayout>

</LinearLayout>