<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/baseline_arrow_back_ios_24"
                android:layout_gravity="center"
                android:paddingRight="8dp"
                android:paddingVertical="8dp"/>
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Appointments Detail"
                android:textStyle="bold"
                android:textColor="@color/GeegyBlack"
                android:textSize="20dp"
                android:gravity="center_vertical"
                android:layout_marginRight="20dp"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Appointments Date:"
            android:textStyle="bold"
            android:textColor="@color/GeegyBlack"
            android:textSize="15dp"
            android:gravity="center_vertical"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/appointmentDateTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Appointments Date:"
            android:textColor="@color/GeegyBlack"
            android:textSize="15dp"
            android:gravity="center_vertical"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Patient Information"
            android:textStyle="bold"
            android:textColor="@color/GeegyBlack"
            android:textSize="15dp"
            android:gravity="center_vertical"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/nameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="@color/GeegyBlack"
            android:textSize="15dp"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/dobTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DOB"
            android:textColor="@color/GeegyBlack"
            android:textSize="15dp"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/addressTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textColor="@color/GeegyBlack"
            android:textSize="15dp"
            android:gravity="center_vertical"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Doctor Information"
            android:textStyle="bold"
            android:textColor="@color/GeegyBlack"
            android:textSize="15dp"
            android:gravity="center_vertical"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/nameDoctorTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name Doctor"
            android:textColor="@color/GeegyBlack"
            android:textSize="15dp"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/specialisTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Specialist"
            android:textColor="@color/GeegyBlack"
            android:textSize="15dp"
            android:gravity="center_vertical"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Problems"
            android:textStyle="bold"
            android:textColor="@color/GeegyBlack"
            android:textSize="15dp"
            android:gravity="center_vertical"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/problemTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Problem"
            android:textColor="@color/GeegyBlack"
            android:textSize="15dp"
            android:gravity="center_vertical"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Symptoms"
            android:textStyle="bold"
            android:textColor="@color/GeegyBlack"
            android:textSize="15dp"
            android:gravity="center_vertical"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/symptomsTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="symptoms"
            android:textColor="@color/GeegyBlack"
            android:textSize="15dp"
            android:gravity="center_vertical"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Actions"
            android:textStyle="bold"
            android:textColor="@color/GeegyBlack"
            android:textSize="15dp"
            android:gravity="center_vertical"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/actionTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Action"
            android:textColor="@color/GeegyBlack"
            android:textSize="15dp"
            android:gravity="center_vertical"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Teeth Photo"
            android:textStyle="bold"
            android:textColor="@color/GeegyBlack"
            android:textSize="15dp"
            android:gravity="center_vertical"
            android:layout_marginTop="15dp"/>
        
        <ImageView
            android:id="@+id/teethImage"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

</LinearLayout>